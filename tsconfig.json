{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "scripthost",
      "dom.iterable",
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ],
    "types": ["node"],
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": false,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@docs/*": ["docs/*"],
      "@void/ui/lib/*": ["lib/*"]
    }
  },
  "include": ["docs", "lib", "typings", "scripts"],
  "exclude": ["node_modules"]
}
