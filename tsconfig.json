{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "scripthost", "esnext"],
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "."
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/tests/**/*.ts",
    "packages/*/tests/**/*.tsx",
    "packages/*/scripts/**/*.ts",
    // "packages/*/typings/**/*.d.ts",
    "scripts/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
