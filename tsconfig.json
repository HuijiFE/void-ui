{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // for vue-class-component and vuex-class
    "experimentalDecorators": true,
    // for vue-class
    "strictFunctionTypes": false,
    "strict": true,
    "lib": [
      "dom",
      "scripthost",
      "es5",
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "docs/*": ["./docs/*"],
      "void-ui": ["./src/index"],
      "void-ui/style": ["./src/index"]
    }
  },
  "exclude": ["node_modules"]
}
