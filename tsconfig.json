{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    // for vue-class-component and vuex-class
    "experimentalDecorators": true,
    // for vue-class
    "strictFunctionTypes": false,
    "strict": true,
    "lib": ["dom", "es5", "scripthost", "es2015", "es2016", "es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./dist/",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "docs/*": ["./docs/*"],
      "void-ui": ["./src/index"],
      "void-ui/style": ["./src/index"]
    }
  },
  "include": ["./docs/**/*", "./src/**/*", "./typings/**/*"],
  "exclude": ["node_modules"]
}
