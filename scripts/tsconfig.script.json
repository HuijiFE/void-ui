{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["dom", "scripthost", "es5", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"],
      "@void/*": ["src/*"],
      "@docs/*": ["docs/*"]
    }
  },
  "include": ["scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
