{
  "name": "void-ui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ts": "ts-node -r tsconfig-paths/register -P ./scripts/tsconfig.json",
    "clean:dist": "rimraf ./dist ./.tmp ./lib",
    "gen-files": "yarn ts scripts/gen-files",
    "build:lib:tsc": "tsc --pretty -p ./src/tsconfig.json",
    "build:lib:babel": "babel .tmp --config-file ./src/babel.config.js -d lib --input-source-map --source-maps",
    "serve:docs": "vue-cli-service serve ./docs/entry-client.ts",
    "build:docs": "vue-cli-service build",
    "gen-pages": "yarn ts scripts/gen-pages",
    "lint:style": "stylelint **/*.scss --config ./.stylelintrc",
    "lint:script": "tslint -p tsconfig.json -c tslint.json -t verbose",
    "lint": "yarn lint:script && yarn lint:style"
  },
  "devDependencies": {
    "cep.scss": "^1.0.1",
    "normalize.css": "^8.0.1",
    "tslib": "^1.9.3",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^7.2.0",
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@huiji/shared-utils": "^1.0.0",
    "@huiji/tslint-rules": "^1.0.2",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.16.0",
    "@types/globby": "^8.0.0",
    "@types/jest": "^23.3.10",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.12.12",
    "@types/rimraf": "^2.0.2",
    "@types/serve-favicon": "^2.2.30",
    "@types/webpack": "^4.4.20",
    "@types/webpack-chain": "^5.0.0",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-pwa": "^3.2.0",
    "@vue/cli-plugin-typescript": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "axios": "^0.18.0",
    "babel-helper-vue-jsx-merge-props": "^2.0.3",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-vue-jsx": "^3.7.0",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "globby": "^8.0.1",
    "jest": "^23.6.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.10.0",
    "register-service-worker": "^1.5.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "serve-favicon": "^2.5.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1",
    "vue": "^2.5.17",
    "vue-router": "^3.0.2",
    "vue-server-renderer": "^2.5.17",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.26.1",
    "webpack-chain": "^5.0.1",
    "webpack-cli": "^3.1.2",
